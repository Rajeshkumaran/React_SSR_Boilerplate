{
  "name": "simple-react-full-stack",
  "version": "1.0.0",
  "description": "Boilerplate to build a full stack web application using React, Node.js, Express and Webpack.",
  "main": "src/server/index.js",
  "scripts": {
    "development": "NODE_PATH=./src BABEL_ENV=node NODE_ENV=development nodemon ./src/server/server.babel.js",
    "start": "node src/server/index.js",
    "build": "webpack --mode production --watch",
    "client": "webpack-dev-server --mode development --devtool inline-source-map --hot",
    "server": "nodemon src/server/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "magic": "cooncurrently \"npm run build\" \"npm run development\"",
    "build1": "webpack --mode production",
    "development1": "NODE_PATH=./src BABEL_ENV=node NODE_ENV=development node ./src/server/server.babel.js"
  },
